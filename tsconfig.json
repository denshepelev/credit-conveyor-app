{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2020",    //replaced with es5 02.12.2022                         
    "module": "commonjs",                    
    "lib": ["ES2020"],  //replaced with es6 02.12.2022                   
    "allowJs": true,
    "outDir": "dist",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true
  },
  "include": ["./src/**/*.ts", "./test"],
  "exclude": ["./test/*.ts","**/*.test.ts"]
}